{
  "model": {
    "name": "google-t5/t5-small",
    "type": "teacher",
    "cache_dir": "/mnt/HDD500/T5Distillation/model_cache"
  },
  
  "dataset": {
    "name": "cnn_dailymail",
    "version": "3.0.0",
    "cache_dir": "/mnt/HDD500/T5Distillation/data",
    "max_length": 512,
    "max_target_length": 150,
    "max_train_samples": null,
    "max_val_samples": 1000,
    "prefix": "summarize: "
  },
  
  "training": {
    "num_epochs": 5,
    "batch_size": 32,
    "eval_batch_size": 1,
    "learning_rate": 3e-4,
    "weight_decay": 0.01,
    "adam_epsilon": 1e-8,
    "warmup_ratio": 0.1,
    "max_grad_norm": 1.0,
    "gradient_accumulation_steps": 1,
    "fp16": false,
    "log_interval": 50,
    "eval_interval": 500,
    "save_interval": 1000,
    "early_stopping_patience": 3,
    "early_stopping_metric": "rouge_l",
    "early_stopping_mode": "max"
  },
  
  "generation": {
    "max_length": 150,
    "min_length": 30,
    "num_beams": 4,
    "no_repeat_ngram_size": 3,
    "early_stopping": true,
    "length_penalty": 1.0,
    "temperature": 1.0,
    "top_k": 50,
    "top_p": 0.95,
    "do_sample": false
  },
  
  "optimization": {
    "optimizer_type": "adamw",
    "scheduler_type": "linear",
    "warmup_steps": 500,
    "gradient_checkpointing": false,
    "mixed_precision": false
  },
  
  "paths": {
    "output_dir": "/mnt/HDD500/T5Distillation/output/teacher",
    "checkpoint_dir": "/mnt/HDD500/T5Distillation/checkpoints/teacher",
    "log_dir": "/mnt/HDD500/T5Distillation/logs/teacher",
    "cache_dir": "/mnt/HDD500/T5Distillation/cache",
    "best_model_name": "best_teacher_model.pt",
    "final_model_name": "final_teacher_model"
  },
  
  "monitoring": {
    "use_wandb": false,
    "wandb_project": "t5-distillation",
    "wandb_entity": null,
    "use_tensorboard": true,
    "tensorboard_dir": "/mnt/HDD500/T5Distillation/runs/teacher",
    "log_level": "INFO"
  },
  
  "hardware": {
    "num_workers": 1,
    "pin_memory": true,
    "find_unused_parameters": false,
    "ddp_backend": "nccl",
    "gradient_accumulation_steps": 1
  },
  
  "evaluation": {
    "metrics": ["rouge", "bleu", "bertscore", "perplexity"],
    "save_predictions": true,
    "num_prediction_samples": 100,
    "eval_during_training": true
  },
  
  "reproducibility": {
    "seed": 42,
    "deterministic": true,
    "benchmark": false
  }
}